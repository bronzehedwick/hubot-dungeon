env:
  node: true
  browser: false

rules:
  brace-style: [2, 'stroustrup']
  comma-style: [2, 'last']
  default-case: 2
  guard-for-in: 2
  no-floating-decimal: 2
  no-nested-ternary: 2
  no-undefined: 2
  radix: 2
  space-before-function-paren: [2, 'never']
  space-before-blocks: 'always'
  spaced-line-comment: [2, 'always', { exceptions: ['-']}]
  strict: [0]
  wrap-iife: 2
  quotes: [2, 'single', 'avoid-escape']
  no-underscore-dangle: [0]
